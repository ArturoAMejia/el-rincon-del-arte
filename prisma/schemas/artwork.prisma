model category {
  id         Int       @id @default(autoincrement())
  state_id   Int       @default(1)
  state      state     @relation(fields: [state_id], references: [id])
  name       String
  created_at DateTime  @default(now())
  artwork    artwork[]
}

model size {
  id         Int       @id @default(autoincrement())
  state_id   Int
  state      state     @relation(fields: [state_id], references: [id])
  name       String
  created_at DateTime  @default(now())
  artwork    artwork[]
}

model colection {
  id          Int       @id @default(autoincrement())
  state       state     @relation(fields: [state_id], references: [id])
  state_id    Int       @default(1)
  name        String
  description String
  created_at  DateTime  @default(now())
  artwork     artwork[]
}

model type_art {
  id         Int       @id @default(autoincrement())
  state_id   Int       @default(1)
  state      state     @relation(fields: [state_id], references: [id])
  name       String
  created_at DateTime  @default(now())
  artwork    artwork[]
}

model artwork {
  id             Int              @id @default(autoincrement())
  state_id       Int              @default(1)
  state          state            @relation(fields: [state_id], references: [id])
  name           String
  description    String
  dimension      String
  price          Float
  painter        painter          @relation(fields: [painter_id], references: [id])
  painter_id     Int
  colection_id   Int
  colection      colection        @relation(fields: [colection_id], references: [id])
  category_id    Int
  category       category         @relation(fields: [category_id], references: [id])
  type_art_id    Int
  type_art       type_art         @relation(fields: [type_art_id], references: [id])
  size_id        Int
  size           size             @relation(fields: [size_id], references: [id])
  created_at     DateTime         @default(now())
  artwork_image  artwork_image[]
  voucher_detail voucher_detail[]
  sale_detail    sale_detail[]
}

model artwork_image {
  id         Int      @id @default(autoincrement())
  artwork_id Int
  artwork    artwork  @relation(fields: [artwork_id], references: [id])
  image      String
  created_at DateTime @default(now())
}
